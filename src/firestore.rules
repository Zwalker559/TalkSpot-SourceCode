rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isAuthenticatedUser() {
      return request.auth != null;
    }
    
    function isManager() {
      let role = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
      return role in ['Lead-Manager', 'Sub-Manager'];
    }
    
    function isCoOwner() {
      let role = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
      return role == 'Co-Owner';
    }

    function isOwnerRole() {
      let role = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
      return role == 'Owner';
    }

    match /users/{userId} {
      // Allow any authenticated user to read user profiles. This is necessary for role checks in other rules.
      allow read: if isAuthenticatedUser();
      allow create: if isOwner(userId);
      
      // Hierarchical update logic:
      // - Owners can update anyone.
      // - Co-Owners can update anyone except other Owners and Co-Owners.
      // - Lead-Managers can update Sub-Managers and Users.
      // - Sub-Managers can only update Users.
      // - Users can update themselves.
      allow update: if isOwner(userId) || 
                    isOwnerRole() ||
                    (isCoOwner() && !(getUserData(userId).role in ['Owner', 'Co-Owner'])) ||
                    (isManager() && getUserData(request.auth.uid).role == 'Lead-Manager' && !(getUserData(userId).role in ['Owner', 'Co-Owner', 'Lead-Manager'])) ||
                    (isManager() && getUserData(request.auth.uid).role == 'Sub-Manager' && getUserData(userId).role == 'User');
      
      // Hierarchical delete logic (mirroring update logic, but you can't delete yourself).
      allow delete: if (isOwnerRole() && userId != request.auth.uid) ||
                       (isCoOwner() && !(getUserData(userId).role in ['Owner', 'Co-Owner'])) ||
                       (isManager() && getUserData(request.auth.uid).role == 'Lead-Manager' && !(getUserData(userId).role in ['Owner', 'Co-Owner', 'Lead-Manager'])) ||
                       (isManager() && getUserData(request.auth.uid).role == 'Sub-Manager' && getUserData(userId).role == 'User');
    }

    match /user_lookups/{lookupId} {
      allow read: if true;
      allow create: if isOwner(request.resource.data.uid);
      // Allow owners, co-owners, and managers to update lookup info, or users to update their own.
      allow update: if isOwner(resource.data.uid) || isOwnerRole() || isCoOwner() || isManager();
      // Allow owners, co-owners, and managers to delete lookups.
      allow delete: if isOwnerRole() || isCoOwner() || isManager();
    }

    match /password_recovery/{userId} {
      allow read: if true;
      allow create, update: if isOwner(userId);
      allow delete: if isOwnerRole() || isCoOwner(); // Allow privileged roles to delete recovery data during cleanup
    }

    match /requests/{requestId} {
      allow read: if isOwner(resource.data.to) || isOwner(resource.data.from);
      allow create: if isOwner(request.resource.data.from);
      allow update, delete: if isOwner(resource.data.to) || isOwner(resource.data.from);
    }

    match /conversations/{conversationId} {
      // Owners can manage any conversation, participants can manage their own.
      allow read, update: if isOwnerRole() || isCoOwner() || request.auth.uid in resource.data.participants;
      allow delete: if isOwnerRole() || isCoOwner() || (request.auth.uid in resource.data.participants);
      allow create: if request.auth.uid in request.resource.data.participants;
    }

    match /conversations/{conversationId}/messages/{messageId} {
       // Owners can read any message, participants can read messages in their conversations.
       allow read: if isOwnerRole() || isCoOwner() || request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
       allow create: if isOwner(request.resource.data.senderId) && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
       // Owners or the original sender can delete a message.
       allow delete: if isOwnerRole() || isCoOwner() || (isOwner(resource.data.senderId) && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants);
    }
    
    match /Sponsorships/{sponsorshipId} {
      allow read: if true;
      allow write: if isOwnerRole() || isCoOwner() || isManager();
    }

    match /audit_logs/{logId} {
        // Only Owners and Co-Owners can read or write to audit logs.
        allow read, write: if isOwnerRole() || isCoOwner();
    }
    
    match /site_config/{docId} {
    	// Allow anyone to read site configuration like global notices
    	allow read: if true;
      // Only allow Owners and Co-Owners to write to site configuration
      allow write: if isOwnerRole() || isCoOwner();
    }
  }
}

    

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isAuthenticatedUser() {
      return request.auth != null;
    }
    
    function isManager() {
      let role = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
      return role in ['Lead-Manager', 'Sub-Manager'];
    }
    
    function isCoOwner() {
      let role = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
      return role == 'Co-Owner';
    }

    function isOwnerRole() {
      let role = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
      return role == 'Owner';
    }

    match /users/{userId} {
      allow read: if isAuthenticatedUser();
      allow create: if isOwner(userId);
      // Hierarchical update logic
      allow update: if isOwner(userId) || 
                    (isOwnerRole()) ||
                    (isCoOwner() && getUserData(userId).role != 'Owner' && getUserData(userId).role != 'Co-Owner') ||
                    (isManager() && getUserData(request.auth.uid).role == 'Lead-Manager' && !(getUserData(userId).role in ['Owner', 'Co-Owner', 'Lead-Manager'])) ||
                    (isManager() && getUserData(request.auth.uid).role == 'Sub-Manager' && getUserData(userId).role == 'User');
      
      // Hierarchical delete logic
      allow delete: if (isOwnerRole() && userId != request.auth.uid) ||
                       (isCoOwner() && !(getUserData(userId).role in ['Owner', 'Co-Owner'])) ||
                       (isManager() && getUserData(request.auth.uid).role == 'Lead-Manager' && !(getUserData(userId).role in ['Owner', 'Co-Owner', 'Lead-Manager'])) ||
                       (isManager() && getUserData(request.auth.uid).role == 'Sub-Manager' && getUserData(userId).role == 'User');
    }

    match /user_lookups/{lookupId} {
      allow read: if true;
      allow create: if isOwner(request.resource.data.uid);
      allow update: if isOwner(request.resource.data.uid) || isManager() || isCoOwner() || isOwnerRole();
      allow delete: if isOwnerRole() || isCoOwner() || isManager();
    }

    match /password_recovery/{userId} {
      allow read: if true;
      allow create, update: if isOwner(userId);
    }

    match /requests/{requestId} {
      allow read: if isOwner(resource.data.to) || isOwner(resource.data.from);
      allow create: if isOwner(request.resource.data.from);
      allow update, delete: if isOwner(resource.data.to) || isOwner(resource.data.from);
    }

    match /conversations/{conversationId} {
      allow read, update: if request.auth.uid in resource.data.participants;
      allow delete: if isOwnerRole() || (request.auth.uid in resource.data.participants);
      allow create: if request.auth.uid in request.resource.data.participants;
    }

    match /conversations/{conversationId}/messages/{messageId} {
       allow read: if request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
       allow create: if isOwner(request.resource.data.senderId) && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
       allow delete: if isOwnerRole() || (isOwner(request.resource.data.senderId) && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants);
    }
    
    match /Sponsorships/{sponsorshipId} {
      allow read: if true;
      allow write: if isManager() || isCoOwner() || isOwnerRole();
    }

    match /audit_logs/{logId} {
        allow read, write: if isOwnerRole();
    }
  }
}


rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      // Allow any authenticated user to read any user profile.
      // This is necessary for role checks to function correctly.
      allow read: if request.auth != null;

      // Users can create and update their own profiles.
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      
      // Allow managers to update or delete lower-level users.
      allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Lead-Manager';
      allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Sub-Manager' && resource.data.role == 'User';

      allow delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Lead-Manager' && resource.data.role != 'Lead-Manager';
      allow delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Sub-Manager' && resource.data.role == 'User';
    }

    match /user_lookups/{lookupId} {
      allow read: if true;
      allow create: if isOwner(request.resource.data.uid);
      allow update: if isOwner(request.resource.data.uid) ||
                       get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Lead-Manager', 'Sub-Manager'];
      allow delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Lead-Manager', 'Sub-Manager'];
    }

    match /password_recovery/{userId} {
      allow read, create, update: if isOwner(userId);
    }

    match /requests/{requestId} {
      allow read: if isOwner(resource.data.to) || isOwner(resource.data.from);
      allow create: if isOwner(request.resource.data.from);
      allow update, delete: if isOwner(resource.data.to) || isOwner(resource.data.from);
    }

    match /conversations/{conversationId} {
      allow read, update, delete: if request.auth.uid in resource.data.participants;
      allow create: if request.auth.uid in request.resource.data.participants;
    }

    match /conversations/{conversationId}/messages/{messageId} {
       allow read, delete: if request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
       allow create: if isOwner(request.resource.data.senderId) && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
    }
    
    // Correct rule for Sponsorships collection
    match /Sponsorships/{sponsorshipId} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Lead-Manager', 'Sub-Manager'];
    }
  }
}
